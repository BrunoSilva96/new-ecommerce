
<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row">
      <div class="col-3">
        <div class="card">
          <div class="card-header">
            Meu Perfil
          </div>
            <ul class="list-group list-group-flush">
              <a href="#" style="text-decoration: none; font-weight: 600;"><li class="list-group-item">Alterar perfil</li></a>
              <a href="#" style="text-decoration: none; font-weight: 600;"><li class="list-group-item">Alterar senha</li></a>
              <a href="#" style="text-decoration: none; font-weight: 600;"><li class="list-group-item">Endere√ßo</li></a>
              <a href="#" style="text-decoration: none; font-weight: 600;"><li class="list-group-item">Favoritos</li></a>
            </ul>
        </div>
      </div>
      <div class="col-9">
        <div class="card">
          <div class="card-body">
            <%= render 'layouts/shared/flash' if flash.present? %>
            <h2><%= current_user.name %></h2>
            <%= image_tag "image-profile", width: 120, class: 'mb-3' %>
            <%= simple_form_for current_user, url: update_user_settings_path, data: {turbo: false } do |f|%>
              <%= f.input :email, readonly:true %>
              <%= f.input :name %>
              <%= f.input :phone, input_html: { class: 'mask-phone'} %>
              <%= f.button :submit, "Atualizar", class: 'btn btn-primary mt-3' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>      
  </div>
</section>